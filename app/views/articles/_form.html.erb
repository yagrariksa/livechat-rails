
<%= form_with model: @article do |f| %>

<div class="">
    <%= f.label :title, "title" %>
    <br>
    <%= f.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div class="">
    <%= f.label :body, "body" %>
    <br>
    <%= f.text_area :body %>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div class="">
  <%= f.label :status, "status" %>
  <br>
  <%= f.select :status, ['public', 'archived', 'private'], selected: 'public' %>
</div>

<div class="">
    <%= f.submit "Submit", disable_with: 'Submiting...' %>
</div>

<% end %>